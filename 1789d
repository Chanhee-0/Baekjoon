#include<iostream>

using namespace std;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	unsigned int s;
	unsigned int n = 0;
	unsigned int i;
	cin >> s;

	for (i = 2; ; i++) {
		n += i;
		if (s <= n)
			break;
	}

	cout << i - 1;

	return 0;
}
/*
1. s에서 1부터 차례대로 뺀다.
2. s가 n보다 작거나 같아질 경우 브레이크
1 - 1            1 1
2 - 2            1    2
3 - 1 2          2 3
4 - 1 3          2
5 - 2 3          2    5
6 - 1 2 3		 3 6
7 - 1 2 4		 3
8 - 1 2 5		 3
9 - 1 2 6        3    9
10 - 1 2 3 4     4 10
11 - 1 2 3 5     4
12 - 1 2 3 6     4
13 - 1 2 3 7     4
14 - 1 2 3 8     4 14
15 - 1 2 3 4 5   5 15
20 - 1 2 3 4 10  5 20
21 - 1 2 3 4 5 6 6 27
*/
